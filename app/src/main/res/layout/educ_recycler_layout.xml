<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="135dp"
            android:layout_height="44dp"
            android:hint="GPA"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="47dp"
            android:layout_marginTop="8dp"
            android:id="@+id/gpa_edittext"
            app:layout_constraintTop_toBottomOf="@+id/school_edittext"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="135dp"
            android:layout_height="44dp"
            android:hint="Year"
            android:layout_marginTop="8dp"
            android:id="@+id/year_edittext"
            app:layout_constraintTop_toBottomOf="@+id/school_edittext"
            app:layout_constraintStart_toEndOf="@+id/gpa_edittext" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="47dp"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="290dp"
            android:layout_height="61dp"
            android:hint="Course work"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="47dp"
            android:layout_marginEnd="47dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/course_edittext" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/major_edittext"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="290dp"
            android:layout_height="44dp"
            android:hint="Major"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="47dp"
            android:layout_marginEnd="47dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/major_edittext" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/gpa_edittext"/>
    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="290dp"
            android:layout_height="44dp"
            android:hint="School name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="47dp"
            android:layout_marginEnd="47dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:id="@+id/school_edittext"/>


